        }
    }

    function rpFun() {
        const rp = document.getElementById("regprice").value

        const regex = /^[0-9]+$/

        if (rp.trim() == '') {
            document.getElementById("rpErr").innerHTML = "Regular price is require"
        } else  if (!regex.test(rp)) {
            document.getElementById("rpErr").innerHTML = "Invalid price"
        } else  if (rp.trim() < 1) {
            document.getElementById("rpErr").innerHTML = "Regular price will not be negative"
        } else {
