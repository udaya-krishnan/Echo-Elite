            // alert("1 if")
            document.getElementById("nameErr").innerHTML = "Product name is require"
            // const err=document.getElementById("nameErr").innerHTML
            // alert(err)
        } else  if (!nameRegex.test(name)) {
            // alert("2 if")
            document.getElementById("nameErr").innerHTML = "Invalid Name"
        } else {
            document.getElementById("nameErr").innerHTML = ""
        }
    }

    function disFun() {
        const dis = document.getElementById("product_dis").value
        if (dis.trim() == '') {
