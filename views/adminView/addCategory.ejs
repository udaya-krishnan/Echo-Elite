        function add() {

            const name = document.getElementById("product_name").value
            const dis = document.getElementById("description").value
            


            const nameRegex = /^[A-Za-z\s]+$/;


            if (name.trim() == '' || dis.trim() == "") {
                document.getElementById("disErr").innerHTML = "Please fill the field"
                setTimeout(() => {
                    document.getElementById("disErr").innerHTML = ""
                }, 1500);
            } else if (!nameRegex.test(name)) {
                document.getElementById("nameErr").innerHTML = "Invalid Name"
                setTimeout(() => {
                    document.getElementById("nameErr").innerHTML = ""
                }, 1500)
                
            }  else {
                // alert("hello")
                $.ajax({
                    url: "/admin/addCategoryPost",
                    method: "post",
                    data: {
                        name,
                        dis
                    },
                    success: (response) => {
                        if (response.status == 'unique') {
                            nameErr.innerHTML = "uinque"
                            setTimeout(() => {
                                nameErr.innerHTML = " "
                            }, 1500)

                        } else if (response.status === true) {
                            window.location.href = "/admin/category"
                        }
                    }

                })
            }


        }





        function cancel() {


            const name = document.getElementById("product_name").value.trim()
            const dis = document.getElementById("description").value.trim()

            if (name == '' && dis == '') {
                window.location.href = "/admin/category"
            } else {
                // alert("h")
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Discard", // Swapping the buttons
                    cancelButtonText: "Cancel"     // Swapping the buttons
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "Cancel!",
                            text: "Your filed has been removed.",
                            icon: "success"
                        }).then(() => {
                            window.location.href = "/admin/category"
                        })
                    }
                })
            }
        }


