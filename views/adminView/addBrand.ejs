    <script>
        setTimeout(()=>{
            document.getElementById("serverErr").style.display="none"
        },1500)
       function nameFun(){
        
        const brname=document.getElementById("brandName").value
        const nameRegex = /^[A-Za-z\s]+$/;

        if(brname.trim()==''){
            document.getElementById("Brand_Err").innerHTML="Brand Name is Require"
        }else{
            document.getElementById("Brand_Err").innerHTML=""
        }
        if(!nameRegex.test(brname)){
            document.getElementById("Brand_Err").innerHTML=" Invalid Brand "
        }else{
            document.getElementById("Brand_Err").innerHTML=""
        }
       }

       function imageFun(input){
       const file=input.files.length

  
       if(file===0){
        document.getElementById("image_err").innerHTML="Image is Require"
       }else{
        document.getElementById("image_err").innerHTML=""
       }if(file!==1){
        document.getElementById("image_err").innerHTML="Plese Select only one image"
       }else{
        document.getElementById("image_err").innerHTML=""
       }
       }

       document.getElementById("submitId").addEventListener("submit",(e)=>{
        nameFun();
        imageFun()

        const nameErr=document.getElementById("Brand_Err")
        const imgErr=document.getElementById("image_err")

        if(nameErr.innerHTML||imgErr.innerHTML){
            e.preventDefault()
        }
        
       })




    </script>
